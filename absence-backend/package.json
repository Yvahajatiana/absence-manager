{
  "name": "absence-backend",
  "version": "1.0.0",
  "description": "API REST Node.js pour la dÃ©claration d'absences domiciliaires",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register src/app.ts\"",
    "build": "tsc",
    "migrate": "node -e \"require('./src/config/migration').runMigrations().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "migrate:rollback": "node -e \"require('./src/config/migration').rollbackLastMigration().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t absence-backend .",
    "docker:run": "docker run -p 3000:3000 absence-backend",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": [
    "absence",
    "domicile",
    "police",
    "API",
    "REST"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/joi": "^17.2.2",
    "@types/node": "^24.1.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
